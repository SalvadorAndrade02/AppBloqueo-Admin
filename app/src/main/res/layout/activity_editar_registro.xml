<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Registro"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp"/>

        <!-- Datos telefono -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IMEI:" />

        <EditText
            android:id="@+id/etEditarIMEI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el IMEI"
            android:inputType="number"
            android:maxLength="15"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marca del Teléfono:" />

        <Spinner
            android:id="@+id/spinnerMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio:" />

        <EditText
            android:id="@+id/etEditarPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el precio"
            android:inputType="numberDecimal"
            android:padding="8dp" />

        <EditText
            android:id="@+id/tvInteres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:focusable="false"
            android:clickable="false"
            android:text="Intereses: " />

        <!-- Campo para datos del Cliente -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Completo del Cliente:" />

        <EditText
            android:id="@+id/etEditarNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el nombre"
            android:inputType="text"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Domicilio:" />

        <EditText
            android:id="@+id/etEditarDomicilio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el domicilio"
            android:inputType="text"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edad:" />

        <EditText
            android:id="@+id/etEditarEdad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese la edad"
            android:inputType="number"
            android:padding="8dp" />

        <!-- Apartado datos de pago -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Periodo de Pago:" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de inicio">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFechaInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de finalización">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFechaFin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pago Semanal:" />

        <EditText
            android:id="@+id/etEditarPagoSemanal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el pago semanal"
            android:inputType="number"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semanas Totales:" />

        <TextView
            android:id="@+id/tvTotalSemanas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total de semanas: 0"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monto Total:" />

        <EditText
            android:id="@+id/etEditarMonto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el monto total"
            android:inputType="number"
            android:padding="8dp" />

        <!-- Botón para Guardar Cambios -->
        <Button
            android:id="@+id/btnGuardarEdicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Cambios"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
